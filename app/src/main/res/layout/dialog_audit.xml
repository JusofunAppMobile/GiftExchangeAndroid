<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_corner"
        android:orientation="vertical">

        <View
            style="@style/C_Line"
            android:background="#FFF"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:id="@+id/v1"
            android:background="#F6F4F3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="通过"
                android:textColor="#333"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/img_select" />

        </LinearLayout>

        <View style="@style/C_Line" />

        <LinearLayout
            android:id="@+id/v2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="不通过"
                android:textColor="#333"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:visibility="gone"
                android:background="@drawable/img_select" />

        </LinearLayout>

        <View style="@style/C_Line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <Button
                android:id="@+id/vCancel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/select_cancel"
                android:text="取消"
                android:textColor="#A6A29D"
                android:textSize="16sp" />

            <Button
                android:id="@+id/vSure"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/select_sure"
                android:text="提交"
                android:textColor="#FFF"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/C_Layout_Root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_navigation" />

    <View style="@style/C_Gray" />

    <LinearLayout style="@style/C_2">

        <EditText
            android:id="@+id/etPhone"
            style="@style/C_1"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11" />

        <Button
            android:id="@+id/btSendCode"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_gray"
            android:text="发送验证码"
            android:textColor="#B3AFA9"
            android:textSize="14sp" />

    </LinearLayout>

    <View style="@style/C_Line" />

    <LinearLayout style="@style/C_2">

        <EditText
            android:id="@+id/etCode"
            style="@style/C_1"
            android:hint="请输入短信验证码"
            android:inputType="number"
            android:maxLength="6" />

    </LinearLayout>

    <View style="@style/C_Line" />

    <Button
        style="@style/C_Common_Red"
        android:layout_marginTop="50dp"
        android:onClick="login"
        android:text="登录" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:src="@drawable/img_login_aa" />

</LinearLayout>
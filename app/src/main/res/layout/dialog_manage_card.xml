<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_corner"
            android:orientation="vertical">

            <View
                style="@style/C_Line"
                android:layout_marginTop="20dp"
                android:background="#FFF" />

            <LinearLayout
                android:id="@+id/vSelectUser"
                style="@style/C_26">

                <TextView
                    android:id="@+id/tvReceiveUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.84"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="请选择接收用户"
                    android:textColor="@color/common_black"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:src="@drawable/img_xi" />

            </LinearLayout>

            <LinearLayout
                style="@style/C_26"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/etNum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:hint="请输入卡券数量"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="@color/common_black"
                    android:textColorHint="@color/common_black"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/vCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/select_cancel"
                    android:text="取消"
                    android:textColor="#A6A29D"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/vSure"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/select_sure"
                    android:text="提交"
                    android:textColor="#FFF"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="120dp" />

    </LinearLayout>

    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape_receive_user"
        android:paddingBottom="1dp"
        android:padding="1dp"
        android:visibility="gone" />

</RelativeLayout>